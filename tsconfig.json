{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"lib": [ "ES2021" ],
		"moduleResolution": "NodeNext",
		"strict": true,
		"declaration": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"rootDir": "src",
		"outDir": "lib",
		// Minify
		"pretty": false,
		// types
		"typeRoots": [
			"node_modules/@types",
			"@types"
		]
	},
	"include": [ "src" ]
}
